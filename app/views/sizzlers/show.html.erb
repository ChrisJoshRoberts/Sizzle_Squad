          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
      <% if @sizzler.photos.present? %>
        <% @sizzler.photos[0..2].each do | photo | %>
        <%= cl_image_tag photo.key, class: "photo-item" %>
        <% end %>
        <% @sizzler.photos[3..4].each do | photo | %>
        <%= cl_image_tag photo.key, class: "photo-item" %>
        <% end %>
      <% elsif @sizzler.user_photos %>
        <% @sizzler.user_photos[0..2].each do | photo | %>
          <%= image_tag photo, class: "photo-item" %>
        <% end %>
        <% @sizzler.user_photos[3..4].each do | photo | %>
          <%= image_tag photo, class: "photo-item" %>
        <% end %>
      <% end %>
      </div>
    </div>
